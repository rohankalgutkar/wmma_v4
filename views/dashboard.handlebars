<img src="img/bg-header/home.png" >
  <main class="max-w-md flex-grow p-2">

    <div class="rounded overflow-hidden shadow-lg p-2">
      <h1 class="text-xl font-bold font-mono mb-2">DASHBOARD</h1>
      <div class="mb-4">
        <h1 class="rupee text-5xl font-semibold text-red-400 inline">{{dashboard.networth}}</h1>
        <small class="text-gray-600">NET WORTH</small>
      </div>

      <!-- Row 1 Assets and Debt -->
      <div class="flex flex-row">
        <div class="dash-block bg-green-300">
          <div class="flex flex-col rounded-md w-8 justify-center items-center mr-4"><img src="img/investments.png"
               srcset=""></div>
          <div class="flex-1 pl-1">
            <div class="rupee font-medium">{{dashboard.assets}}</div>
            <small class="text-gray-600">Assets</small>
          </div>
        </div>

        <div class="dash-block bg-pink-300">
          <div class="flex flex-col rounded-md w-8 justify-center items-center mr-4"><img src="img/debt.png" 
              srcset=""></div>
          <div class="flex-1 pl-1">
            <div class="rupee font-medium">{{dashboard.debt}}</div>
            <small class="text-gray-600">Debt</small>
          </div>
        </div>
      </div>

      <!-- Row 2 Liquid and Fixed Assets -->
      <div class="flex flex-row">
        <div class="dash-block bg-teal-200">
          <div class="flex flex-col rounded-md w-8 justify-center items-center mr-4"><img src="img/liquid.png" 
              srcset=""></div>
          <div class="flex-1 pl-1">
            <div class="rupee font-medium">{{dashboard.liquid}}</div>
            <small class="text-gray-600">Liquid</small>
          </div>
        </div>

        <div class="dash-block bg-blue-200">
          <div class="flex flex-col rounded-md w-8 justify-center items-center mr-4"><img src="img/safe.png" 
              srcset=""></div>
          <div class="flex-1 pl-1">
            <div class="rupee font-medium">{{dashboard.fixed}}</div>
            <small class="text-gray-600">Fixed</small>
          </div>
        </div>
      </div>

      <!-- Row 3 Loans and Credit -->
      <div class="flex flex-row">
        <div class="dash-block bg-red-200">
          <div class="flex flex-col rounded-md w-8 justify-center items-center mr-4"><img src="img/bank.png" 
              srcset=""></div>
          <div class="flex-1 pl-1">
            <div class="rupee font-medium">{{dashboard.loan}}</div>
            <small class="text-gray-600">Loan</small>
          </div>
        </div>

        <div class="dash-block bg-orange-100">
          <div class="flex flex-col rounded-md w-8 justify-center items-center mr-4 bg-"><img src="img/cc.png" 
              srcset=""></div>
          <div class="flex-1 pl-1">
            <div class="rupee font-medium">{{dashboard.credit}}</div>
            <small class="text-gray-600">Credit</small>
          </div>
        </div>
      </div>


      <div class="flex justify-between mt-3">
        <div class="flex-1 flex flex-col justify-center p-2 mx-1 bg-white border border-gray-300 rounded-t-lg">
          <div>
            <p class="text-3xl font-semibold text-center text-red-500 rupee">{{dashboard.spends}}</p>
            <p class="text-md text-center text-gray-600">Spends</p>
          </div>
        </div>
        <div class="flex-1 flex flex-col justify-center p-2 mx-1 bg-white border border-gray-300 rounded-t-lg">
          <div>
            <p class="text-3xl font-semibold text-center text-gray-900">{{dashboard.activeEMI}}</p>
            <p class="text-md text-center text-gray-600">Active EMIs</p>
          </div>
        </div>
        <div class="flex-1 flex flex-col justify-center p-2 mx-1 bg-white border border-gray-300 rounded-t-lg">
          <div>
            <p class="text-3xl font-semibold text-center text-gray-900">{{dashboard.investments}}</p>
            <p class="text-md text-center text-gray-600">Investments</p>
          </div>
        </div>

      </div>
    </div>

  </main>