{{!-- <a class="border z-50 p-2 ml-2 mt-2" href="/login">Refresh</a> --}}

<img src="img/login.png">
<main class="max-w-md flex-grow p-2">

  <form class="rounded overflow-hidden shadow-lg p-4 mb-6 pb-6" action="/login" method="POST">
    {{!-- <h1 class="text-xl font-bold font-mono pb-6">LOGIN</h1> --}}

    <div class="flex justify-between">
      <h1 class="text-xl font-bold font-mono py-1">LOGIN</h1>
      <p class="block self-center">
        <span class="text-xs">Or.. </span><a href="/signup" class="text-blue-500"> Signup</a>
      </p>
    </div>
    {{!-- bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 --}}
    <div class="my-3">
      <label class="block text-gray-700 text-sm font-bold mb-3" for="username">
        Username
      </label>
      <input
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        id="username" type="text" placeholder="username" autocomplete="off" inputmode="text"
        name='username'>
    </div>
    <div class="my-3">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
        Password
      </label>
      <input
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
        id="password" type="password" placeholder="*********" name='password'>
      {{!-- <p class="text-red-500 text-xs italic">Please choose a password.</p> --}}
    </div>

    <div class="mt-4 pt-3 mb-4 flex flex-row-reverse">
      {{!-- <button class="modal-close"><img src="img/close.png" class="h-8 origin-center transform rotate-45"></button> --}}

      <button
        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
        type="submit">
        Sign In
      </button>

      {{#if invalidCredentials}}
      <div class="text-xs mr-20 flex flex-row" id="invalidCredsNotif">
        <img src="img/error.png" class="h-6 mr-2 self-center">
        <p class="flex-1 inline text-semi-bold text-red-600 self-center">
          Incorrect credentials!
        </p>
      </div>
      {{/if}}

    </div>

  </form>
  <p class="text-center text-gray-500 text-xs">
    &copy; 2020 WMMA. Created by daft_ro.
  </p>
</main>

<script>
  const invalidCredsNotif = document.getElementById('invalidCredsNotif')
  if (invalidCredsNotif) {
    setTimeout(() => {
      invalidCredsNotif.classList.add('hidden')
    }, 2000)
  }
</script>